<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<AnchorPane prefHeight="433.0" prefWidth="802.0" style="-fx-background-color: #9abedb;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.client.ClientViewAppointmentController">
    <Pane prefHeight="61.0" prefWidth="802.0" style="-fx-background-color: #C0C0C0;">
        <Label layoutX="31.0" layoutY="14.0" prefHeight="33.0" prefWidth="162.0" text="My appointment">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
    </Pane>
    <TableView fx:id="appointmentTableView" layoutX="18.0" layoutY="85.0" prefHeight="200.0" prefWidth="762.0">
      <columns>
          <TableColumn fx:id="firstNameColumn" prefWidth="94.0" text="First name" />
          <TableColumn fx:id="secondNameColumn" prefWidth="173.0" text="Second name" />
          <TableColumn fx:id="serviceNameColumn" prefWidth="126.0" text="Service name" />
          <TableColumn fx:id="servicePriceColumn" minWidth="0.0" prefWidth="72.0" text="Price" />
          <TableColumn fx:id="dateColumn" prefWidth="150.0" text="Date" />
         <TableColumn fx:id="dentistNameColumn" prefWidth="146.0" text="Dentist name" />
      </columns>
    </TableView>
    <!--suppress JavaFxEventHandler -->
    <Button fx:id="backButton" layoutX="18.0" layoutY="363.0" mnemonicParsing="false" onAction="#goBackToClientPage" prefHeight="43.0" prefWidth="85.0" text="Back">
        <font>
          <Font size="14.0" />
        </font>
    </Button>
    <Button fx:id="deleteAppointmentButton" layoutX="601.0" layoutY="363.0" mnemonicParsing="false" onAction="#deleteAppointment" prefHeight="43.0" prefWidth="179.0" text="DELETE APPOINTMENT" textFill="RED">
        <font>
          <Font name="System Bold" size="14.0" />
        </font>
    </Button>
    <Text fx:id="appointmentMessage" fill="RED" layoutX="153.0" layoutY="388.0" textAlignment="RIGHT" wrappingWidth="415.0">
        <font>
          <Font name="Times New Roman Bold Italic" size="14.0" />
        </font>
    </Text>
    <stylesheets>
        <URL value="@../appointmentTablesViewStyle.css" />
    </stylesheets>
</AnchorPane>
